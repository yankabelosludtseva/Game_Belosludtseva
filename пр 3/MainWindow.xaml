<Window x:Class="пр_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:пр_3"
        mc:Ignorable="d"
                Title="Игра-кликер" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid 
        Background="#ff424242">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border 
            BorderBrush="Black" 
            BorderThickness="1" 
            Margin="10" 
            Background="#fffdfdfd">
            <Grid>
                <Image 
                    Margin="10,0,10,190"
                    Source="Image/knight.png"/>
                <Label 
                Content="Основные характеристики персонажа:" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                FontWeight="Bold" 
                Margin="10,0,0,160"/>
                <Label 
                x:Name="playerHealht"
                Content="Жизненные показатели: 100" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10,0,0,130"/>
                <Label 
                x:Name="playerArmor"
                Content="Броня: 100" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10,0,0,100"/>
                <Label 
                x:Name="playerLevel"
                Content="Уровень: 1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10,0,0,70"/>
                <Label
                x:Name="playerGlasses"
                Content="Опыт: 0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10,0,0,40"/>
                <Label 
                x:Name="playerMoney"
                Content="Монеты: 0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10,0,0,10"/>
            </Grid>
        </Border>
        <Border 
        BorderBrush="Black" 
        BorderThickness="1" 
        Margin="10" 
        Background="#fffdfdfd"
        Grid.Column="1"
        MouseDown="AAttackEnemy">
            <Grid>
                <Image 
                Margin="10,10,10.2,185.4"/>
                <Label 
                    Content="Основные характеристики персонажа:" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    FontWeight="Bold" 
                    Margin="10,0,0,160"/>
                <Label 
                    x:Name="emptyHealht"
                    Content="Жизненные показатели: 100" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Margin="10,0,0,130"/>
                <Label 
                    x:Name="emptyArmor"
                    Content="Броня: 100" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Margin="10,0,0,100"/>
            </Grid>
        </Border>
        <Image 
            x:Name="emptyImage"
            Margin="10,10,10,195"
            Source="Image/monstr_1.png" Grid.Column="1"/>
    </Grid>
</Window>
